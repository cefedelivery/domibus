            AND result.message_Status &lt;=&gt; flat_table.message_status
            AND result.NOTIFICATION_STATUS &lt;=&gt; flat_table.NOTIFICATION_STATUS
            AND result.MSH_ROLE &lt;=&gt; flat_table.MSH_ROLE
