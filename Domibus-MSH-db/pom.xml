                           </url>
                           <migrationSqlOutputFile>
                               ${project.build.directory}/sql-scripts/oracle10g-3.0-to-3.1-migration.ddl
                           </migrationSqlOutputFile>
                       </configuration>
                   </execution>
                   <execution>
                       <id>generate-mysql-script-delta-3.1.1</id>
                       <phase>generate-resources</phase>
                       <goals>
                           <goal>updateSQL</goal>
                       </goals>
                       <configuration>
                           <changeLogFile>
                               src/main/resources/db/changelog-3.1.1-delta.xml
                           </changeLogFile>
                           <url>
                               offline:mysql?changeLogFile=${project.build.directory}/liquibase/changelog-3.1.1-delta.mysql
                           </url>
                           <migrationSqlOutputFile>
                               ${project.build.directory}/sql-scripts/mysql5innoDb-3.1.0-to-3.1.1-migration.ddl
                           </migrationSqlOutputFile>
                       </configuration>
                   </execution>
                   <execution>
                       <id>generate-oracle-script-delta-3.1.1</id>
                       <phase>generate-resources</phase>
                       <goals>
                           <goal>updateSQL</goal>
                       </goals>
                       <configuration>
                           <changeLogFile>
                               src/main/resources/db/changelog-3.1.1-delta.xml
                           </changeLogFile>
                           <url>
                               offline:oracle?version=11.2.0&amp;changeLogFile=${project.build.directory}/liquibase/changelog-3.1.1-delta.oracle
                           </url>
                           <migrationSqlOutputFile>
                               ${project.build.directory}/sql-scripts/oracle10g-3.1.0-to-3.1.1-migration.ddl
                           </migrationSqlOutputFile>
                       </configuration>
                   </execution>
                   <execution>
                       <id>generate-mysql-script-delta-3.2.5</id>
                       <phase>generate-resources</phase>
                       <goals>
                           <goal>updateSQL</goal>
                       </goals>
                       <configuration>
                           <changeLogFile>
                               src/main/resources/db/changelog-3.2.5-delta.xml
                           </changeLogFile>
                           <url>
                               offline:mysql?changeLogFile=${project.build.directory}/liquibase/changelog-3.2.5-delta.mysql
                           </url>
                           <migrationSqlOutputFile>
                               ${project.build.directory}/sql-scripts/mysql5innoDb-3.2.x-to-3.2.5-migration.ddl
                           </migrationSqlOutputFile>
                       </configuration>
                   </execution>
                   <execution>
                       <id>generate-oracle-script-delta-3.2.5</id>
                       <phase>generate-resources</phase>
                       <goals>
                           <goal>updateSQL</goal>
                       </goals>
                       <configuration>
                           <changeLogFile>
                               src/main/resources/db/changelog-3.2.5-delta.xml
                           </changeLogFile>
                           <url>
                               offline:oracle?version=11.2.0&amp;changeLogFile=${project.build.directory}/liquibase/changelog-3.2.5-delta.oracle
                           </url>
                           <migrationSqlOutputFile>
                               ${project.build.directory}/sql-scripts/oracle10g-3.2.x-to-3.2.5-migration.ddl
                           </migrationSqlOutputFile>
                       </configuration>
                   </execution>
                   <execution>
                       <id>generate-mysql-script-3.1.1-delta-3.2.0</id>
                       <phase>generate-resources</phase>
                       <goals>
                           <goal>updateSQL</goal>
                       </goals>
                       <configuration>
                           <changeLogFile>
                               src/main/resources/db/changelog-3.1.1-3.2.0-delta.xml
                           </changeLogFile>
                           <url>
                               offline:mysql?changeLogFile=${project.build.directory}/liquibase/changelog-3.1.1-3.2.0-delta.mysql
                           </url>
                           <migrationSqlOutputFile>
                               ${project.build.directory}/sql-scripts/mysql5innoDb-3.1.1-to-3.2.0-migration.ddl
                           </migrationSqlOutputFile>
                       </configuration>
                   </execution>
                   <execution>
                       <id>generate-oracle-script-3.1.1-delta-3.2.0</id>
                       <phase>generate-resources</phase>
                       <goals>
                           <goal>updateSQL</goal>
                       </goals>
                       <configuration>
                           <changeLogFile>
                               src/main/resources/db/changelog-3.1.1-3.2.0-delta.xml
                           </changeLogFile>
                           <url>
                               offline:oracle?version=11.2.0&amp;changeLogFile=${project.build.directory}/liquibase/changelog-3.1.1-3.2.0-delta.oracle
                           </url>
                           <migrationSqlOutputFile>
                               ${project.build.directory}/sql-scripts/oracle10g-3.1.1-to-3.2.0-migration.ddl
                           </migrationSqlOutputFile>
                       </configuration>
                   </execution>
               </executions>
           </plugin>
       </plugins>
    </build>    
</project>
