<?xml version="1.0" encoding="UTF-8"?>

<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>
    <mapping>
        <class-a>eu.domibus.core.alerts.model.service.StringPropertyValue</class-a>
        <class-b>eu.domibus.core.alerts.model.persist.StringEventProperty</class-b>
        <field>
            <a>value</a>
            <b>stringValue</b>
        </field>
    </mapping>
    <mapping>
        <class-a>eu.domibus.core.alerts.model.service.DatePropertyValue</class-a>
        <class-b>eu.domibus.core.alerts.model.persist.DateEventProperty</class-b>
        <field>
            <a>value</a>
            <b>dateValue</b>
        </field>
    </mapping>
    <mapping wildcard="false">
        <class-a>eu.domibus.core.alerts.model.service.Event</class-a>
        <class-b>eu.domibus.core.alerts.model.persist.Event</class-b>
        <field>
            <a>entityId</a>
            <b>entityId</b>
        </field>
        <field>
            <a>type</a>
            <b>type</b>
        </field>
        <field>
            <a>reportingTime</a>
            <b>reportingTime</b>
        </field>
        <field>
            <a>properties</a>
            <b>properties</b>
            <a-hint>eu.domibus.core.alerts.model.service.StringPropertyValue, eu.domibus.core.alerts.model.service.DatePropertyValue</a-hint>
            <b-hint>eu.domibus.core.alerts.model.persist.StringEventProperty, eu.domibus.core.alerts.model.persist.DateEventProperty</b-hint>
        </field>
    </mapping>
</mappings>